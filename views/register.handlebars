<!doctype html>

<html>
<head>
	<title>HCI Project Portfolio</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/common.css" rel="stylesheet">
<!-- 	<link href="/css/register.css" rel="stylesheet" type="text/css"> -->
</head>

<body>	
	<div class="navbar">
		<ul>
			<li><a href="/login">Login</a></li>
			<li><a href="/create_profile">Create Profile</a></li>
			<li><a class="active" href="/">Home</a></li>
		</ul>
	</div>
	<div class="container">
		<div>
			<h1>Club Registration</h1>
		</div>		
		<div id="body1">	
			<div>
				<br>
				<input type="text" class="form-control" id="club_name" placeholder="Club Name" name="club_name">	
			</div>
			<br>
			<div>
				<textarea name="RegisterText" cols="130" rows="5" ... placeholder="Club Description"></textarea>
			</div>
			<br>
			
			<h3>Club Search Tags:</h3>
			<br>
			{{#each Tags}}
				<div class="interest">
						<label><input type="checkbox" name="interest"> {{name}}</label><br>
					<hr>
				</div>
			{{/each}}
			
			<legend></legend>
			<input type="button" class="button" onclick="location.href='/'" value="Register your club"/>
		</div>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
</body>
</html>