<body>	

	<div class="navbar" id="navbar">

	</div>

	<div class="container">
		<div>
			<h2>Browse Our Clubs</h2>
		</div>	

		{{#each Clubs}}
			<div class="club">
				<h3>{{name}}</h3>
				<p>{{description}}</p>
				<input type="button" class="button" onclick="window.open('{{url}}','_blank');;" value="Learn More" id="{{name}}"/>
				<script>addListener(downloadLink, 'click', function() {
	    					ga('send', 'event', 'button', 'click');
	  					});</script>
				<hr>
			</div>
		{{/each}}
	</div>
